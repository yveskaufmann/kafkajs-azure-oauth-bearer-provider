# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{js,json,ts}]
trim_trailing_whitespace = true
tab_width = 2
indent_size = 2
indent_style = space


[{Makefile,*.mk}]
trim_trailing_whitespace = true
tab_width = 2
indent_size = 2
indent_style = tab

